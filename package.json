{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Just a personal project to practice what I'm learning in the curso.dev course and improve my dev skills.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run service:up && next dev",
    "service:up": "docker compose -f infra/compose.yml up -d",
    "service:down": "docker compose -f infra/compose.yml down",
    "service:stop": "docker compose -f infra/compose.yml stop",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "next": "^15.5.6",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "prettier": "^3.6.2"
  }
}
